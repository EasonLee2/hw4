<% if @current_user %>

  <div class="ms-2 mb-3">
  <h1><%= @place["name"] %></h1>
  </div>
  
  <div class="ms-2 mb-3">
    <a href="/posts/new?place_id=<%= @place["id"] %>" class="btn btn-primary">New Post</a>
  </div>

  <div class="row ms-2 mb-3">
    <% for post in @posts %>
      <div class="col-md-4 col-sm-6">
        <h3><%= post["title"] %></h3>
        <h4><%= post["posted_on"] %></h4>
        <p>
          <% if post.uploaded_image.attached? %>
            <img src="<%= url_for(post.uploaded_image) %>" class="img-fluid">
          <% else %>
            <img src="<%= post["image"] %>" class="img-fluid">
          <% end %>
        </p>
        <p><%= post["description"] %></p>
      </div>
    <% end %>
  </div>

  <div class="ms-2 mb-3">
    <a href="/places" class="btn btn-primary">Back to All Places</a>
  </div>

<% end %>
